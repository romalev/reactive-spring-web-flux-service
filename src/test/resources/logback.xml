<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36}::%M
                - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="com.reactive.service" level="ALL" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="io.netty" level="INFO,ERROR" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="org.springframework" level="ERROR" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>